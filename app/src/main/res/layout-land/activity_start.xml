<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pierregmail.thube.tabataproject.Activity.StartActivity">

    <TextView
        android:text="Ready ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Etat"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/timerValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textSize="40sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/startButton"
        android:layout_height="45dp"
        android:text="Start"
        android:onClick="onStartClick"
        android:textColor="#ff00ff00"
        android:layout_width="150dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/timerValue"
        android:layout_toStartOf="@+id/timerValue" />

    <Button
        android:id="@+id/pauseButton"
        android:layout_height="45dp"
        android:onClick="onPauseClick"
        android:text="Pause"
        android:textColor="#ffff0000"
        android:clickable="false"
        android:layout_width="150dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/timerValue"
        android:layout_toEndOf="@+id/timerValue" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="27dp"
        android:id="@+id/textView_nombreCycle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_nombreCycle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp"
        android:id="@+id/textView_nombreTabata" />
</RelativeLayout>
